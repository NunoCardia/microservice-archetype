<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.6.2</version>
        <relativePath/>
    </parent>

    <groupId>archetype.it</groupId>
    <artifactId>basic</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>basic</name>
    <description>basic project</description>

    <developers>
        <developer>
            <id>fnuno</id>
            <name>Nuno Ferreira</name>
            <email>nunocardia21@gmail.com</email>
            <roles>
                <role>developer</role>
            </roles>
            <timezone>Europe/Lisbon</timezone>
        </developer>
    </developers>

    <properties>
        <junit5.version>5.5.2</junit5.version>
        <mapstruct.version>1.5.3.Final</mapstruct.version>
        <java.version>17</java.version>
    </properties>

    <modules>
        <module>test-core</module>
        <module>test-adapter-inbound-rest</module>
        <module>test-adapter-inbound-kafka</module>
        <module>test-adapter-outbound-nosql</module>
        <module>test-adapter-outbound-sql</module>
        <module>test-application</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.mapstruct</groupId>
                <artifactId>mapstruct</artifactId>
                <version>${mapstruct.version}</version>
            </dependency>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>
            <dependency>
                <groupId>archetype.it</groupId>
                <artifactId>test-application</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>archetype.it</groupId>
                <artifactId>test-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>archetype.it</groupId>
                <artifactId>test-adapter-inbound-kafka</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>archetype.it</groupId>
                <artifactId>test-adapter-inbound-rest</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>archetype.it</groupId>
                <artifactId>test-adapter-outbound-nosql</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>archetype.it</groupId>
                <artifactId>test-adapter-outbound-sql</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-engine</artifactId>
                <version>${junit5.version}</version>
                <scope>provided</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <!-- Maven Jacoco Plugin (Java Code Coverage) -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${mapstruct.version}</version>
                        </path>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
